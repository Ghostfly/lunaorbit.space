{
  "$schema": "https://raw.githubusercontent.com/Polymer/lit-html/main/packages/localize-tools/config.schema.json",
  "sourceLocale": "en",
  "targetLocales": ["en", "fr"],
  "tsConfig": "tsconfig.json",
  "output": {
    "mode": "runtime",
    "outputDir": "src/locales",
    "localeCodesModule": "src/locale-codes.ts"
  },
  "interchange": {
    "format": "xliff",
    "xliffDir": "xliff"
  }
}