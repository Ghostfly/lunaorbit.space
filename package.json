{
  "name": "luna-orbit",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "start": "web-dev-server --node-resolve --open --root-dir dist/ --app-index index.html",
    "start:watch": "web-dev-server --open dev/ --node-resolve --watch",
    "bundle:watch": "npx rollup --config --watch --environment BUILD:development ",
    "clean": "rimraf luna-orbit.{d.ts,d.ts.map,js,js.map} test/luna-orbit.{d.ts,d.ts.map,js,js.map} test/luna-orbit.{d.ts,d.ts.map,js,js.map}",
    "lint": "npm run lint:lit-analyzer && npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.ts'",
    "lint:lit-analyzer": "lit-analyzer",
    "localize": "npx lit-localize extract",
    "format": "prettier src/* --write",
    "test": "karma start karma.conf.cjs",
    "test:watch": "karma start karma.conf.cjs --auto-watch=true --single-run=false",
    "test:update-snapshots": "karma start karma.conf.cjs --update-snapshots",
    "test:prune-snapshots": "karma start karma.conf.cjs --prune-snapshots",
  },
  "keywords": [
    "lunaorbit",
    "terra",
    "validator",
    "blockchain",
    "website"
  ],
  "author": "Gh0stfly_",
  "license": "BSD-3-Clause",
  "dependencies": {
    "@lit-labs/task": "*",
    "@lit/localize": "^0.9.0",
    "@lit/localize-tools": "^0.2.1",
    "@rollup/plugin-typescript": "^8.2.1",
    "@vaadin/router": "^1.7.4",
    "lit-element": "^2.4.0",
    "rollup-plugin-minify-html-literals": "^1.2.6"
  },
  "devDependencies": {
    "@open-wc/testing": "^2.5.10",
    "@open-wc/testing-karma": "^3.3.11",
    "@rollup/plugin-beep": "^0.2.0",
    "@rollup/plugin-replace": "^2.3.1",
    "@types/chai": "^4.2.11",
    "@types/crypto-js": "^4.0.1",
    "@types/mocha": "^7.0.2",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "@web/dev-server": "^0.1.11",
    "chai": "^4.2.0",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.46.1",
    "eslint": "^6.8.0",
    "karma": "^4.4.1",
    "karma-chai": "^0.1.0",
    "karma-mocha": "^1.3.0",
    "lit-analyzer": "^1.1.10",
    "mocha": "^7.1.1",
    "prettier": "^2.0.4",
    "rimraf": "^3.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-copy": "^3.4.0",
    "rollup-plugin-css-only": "^3.1.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-node-externals": "^2.2.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.2.4"
  }
}
